pipeline {
    agent any

    stages {
        stage('Hello World') {
            steps {
                echo 'Hello, World!'
            }
        }

        stage('Stage 1') {
            steps {
                echo 'This is the first additional stage.'
            }
        }

        stage('Stage 2') {
            steps {
                echo 'Now we are in the second additional stage.'
            }
        }

        stage('Stage 3') {
            steps {
                echo 'Finally, we have reached the third additional stage.'
            }
        }
    }
}
